{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**/*"]
}
